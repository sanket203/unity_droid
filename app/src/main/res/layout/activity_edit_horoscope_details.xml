<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="52dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text_rounded_rectangle">

                    <Spinner
                        android:id="@+id/spinnerSubcaste"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/subcaste_spinner"
                        android:padding="10dp"
                        android:prompt="@string/subcaste_prompt" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textErrorSubCaste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter in feet"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text_rounded_rectangle">

                    <Spinner
                        android:id="@+id/spinnerShakha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/shakha_spinner"
                        android:padding="10dp"
                        android:prompt="@string/shakha_prompt" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textErrorShakha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter in feet"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editUpshakha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_rounded_rectangle"
                    android:hint="@string/upshakha"
                    android:imeOptions="flagForceAscii"
                    android:minHeight="35dp"
                    android:padding="10dp"
                    android:textColorHint="#b6b6b6"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editGotra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_rounded_rectangle"
                    android:hint="@string/gotra"
                    android:imeOptions="flagForceAscii"
                    android:minHeight="35dp"
                    android:padding="10dp"
                    android:textColorHint="#b6b6b6"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textErrorGotra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter in feet"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text_rounded_rectangle">

                    <Spinner
                        android:id="@+id/spinnerRashi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/rashi_spinner"
                        android:padding="10dp"
                        android:prompt="@string/rashi_prompt" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textErrorRashi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter in feet"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text_rounded_rectangle">

                    <Spinner
                        android:id="@+id/spinnerGana"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/gana_spinner"
                        android:padding="10dp"
                        android:prompt="@string/gana_prompt" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textErrorGana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter in feet"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text_rounded_rectangle">

                    <Spinner
                        android:id="@+id/spinnerNakshatra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/nakshatra_spinner"
                        android:padding="10dp"
                        android:prompt="@string/nakshatra_prompt" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textErrorNakshatra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter in feet"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text_rounded_rectangle">

                    <Spinner
                        android:id="@+id/spinnerNadi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/spinner_naadi"
                        android:padding="10dp"
                        android:prompt="@string/nadi_prompt" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textErrorNaadi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter in feet"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text_rounded_rectangle">

                    <Spinner
                        android:id="@+id/spinnerCharan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/charan_spinner"
                        android:padding="10dp"
                        android:prompt="@string/charan_prompt" />

                </LinearLayout>


                <TextView
                    android:id="@+id/textErrorCharan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter in feet"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text_rounded_rectangle">

                    <Spinner
                        android:id="@+id/spinnerMangal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/mangal_spinner"
                        android:padding="10dp"
                        android:prompt="@string/mangalik" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textErrorMangal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter in feet"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_rounded_rectangle"
                    android:hint="@string/remarks"
                    android:imeOptions="flagForceAscii"
                    android:minHeight="35dp"
                    android:padding="10dp"
                    android:textColorHint="#b6b6b6"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/login_btn_shape"
                    android:text="Save"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>