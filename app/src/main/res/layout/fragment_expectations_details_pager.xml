<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/details_background_rectangle"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:padding="15dp"
                android:text="Expectations"
                android:textColor="#242926"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="0.3"
                android:text="EDIT"
                android:textColor="@color/colorAccent" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:padding="15dp"
                android:text="Minimum Height :"
                android:textColor="#929292"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_min_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:text="5.6"
                android:textColor="#242926"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:padding="15dp"
                android:text="Maximum Height :"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_max_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:text="6.0"
                android:textColor="#242926"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:padding="15dp"
                android:text="Minimum Age :"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_min_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:text="21"
                android:textColor="#242926"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:padding="15dp"
                android:text="Maximum Age :"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_max_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:text="23"
                android:textColor="#242926"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:padding="15dp"
                android:text="Subcaste :"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_subcaste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:text="Deshastha"
                android:textColor="#242926"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:padding="15dp"
                android:text="Education :"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:text="B.E"
                android:textColor="#242926"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:padding="15dp"
                android:text="Income :"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:text="1000000 per annum"
                android:textColor="#242926"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:padding="15dp"
                android:text="Working Location :"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_working_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:text="Pune"
                android:textColor="#242926"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:padding="15dp"
                android:text="Other expectations :"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="34.3sp"
                android:text="None"
                android:textColor="#242926"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
