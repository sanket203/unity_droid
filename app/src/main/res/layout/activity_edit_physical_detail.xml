<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="52dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_rounded_rectangle"
                android:hint="Weight"
                android:inputType="number"
                android:minHeight="35dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:textColorHint="#b6b6b6"
                android:textSize="15sp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="Height :" />

                <Spinner
                    android:id="@+id/spinnerFeet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:entries="@array/feet_spinner"
                    android:prompt="@string/spectacle_prompt" />

                <Spinner
                    android:id="@+id/spinnerInches"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:entries="@array/inches_spinner"

                    android:prompt="@string/spectacle_prompt" />

            </LinearLayout>

            <EditText
                android:id="@+id/editWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="52dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_rounded_rectangle"
                android:hint="Weight"
                android:inputType="number"
                android:minHeight="35dp"
                android:padding="10dp"
                android:textColorHint="#b6b6b6"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editComplexion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="52dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_rounded_rectangle"
                android:hint="Complexion"
                android:minHeight="35dp"
                android:padding="10dp"
                android:textColorHint="#b6b6b6"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/editBodyForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="52dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_rounded_rectangle"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:hint="Body Form"
                android:minHeight="35dp"
                android:padding="10dp"
                android:textColorHint="#b6b6b6"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="52dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="20dp"
                android:minHeight="35dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text_rounded_rectangle">

                    <Spinner
                        android:id="@+id/spinnerSpectacle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/spectacle_spinner"
                        android:padding="10dp"
                        android:prompt="@string/spectacle_prompt" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text_rounded_rectangle">

                    <Spinner
                        android:id="@+id/editBloodGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/blood_group"
                        android:padding="10dp"
                        android:prompt="@string/blood_group_prompt" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
		android:layout_marginStart="52dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="52dp"
                android:layout_weight="0.5"
                android:background="@drawable/edit_text_rounded_rectangle">

                <Spinner
                    android:id="@+id/spinnerMedicalSurgery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/medical_surgery_spinner"
                    android:padding="10dp"
                    android:prompt="@string/medical_surgery_prompt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
		 android:layout_marginStart="52dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="52dp"
                android:layout_weight="0.5"
                android:background="@drawable/edit_text_rounded_rectangle">

                <Spinner
                    android:id="@+id/spinnerDisability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/disability_spinner"
                    android:padding="10dp"
                    android:prompt="@string/disability_prompt" />

            </LinearLayout>

            <EditText
                android:id="@+id/editOtherRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="52dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_rounded_rectangle"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:hint="Other Remark"
                android:minHeight="35dp"
                android:padding="10dp"
                android:textColorHint="#b6b6b6"
                android:textSize="15sp" />


            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="52dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_btn_shape"
                android:text="Save"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>